<h1>Share Types</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @share_types.each do |share_type| %>
      <tr>
        <td><%= share_type.name %></td>
        <td><%= link_to 'Show', share_type %></td>
        <td><%= link_to 'Edit', edit_share_type_path(share_type) %></td>
        <td><%= link_to 'Destroy', share_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Share type', new_share_type_path %>
