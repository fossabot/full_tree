<h1>Share Categories</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @share_categories.each do |share_category| %>
      <tr>
        <td><%= share_category.name %></td>
        <td><%= link_to 'Show', share_category %></td>
        <td><%= link_to 'Edit', edit_share_category_path(share_category) %></td>
        <td><%= link_to 'Destroy', share_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Share category', new_share_category_path %>
